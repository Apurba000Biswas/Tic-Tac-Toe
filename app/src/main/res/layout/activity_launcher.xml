<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:columnCount="1"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">


        <!--First row-->
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_fist_row_1"
                android:layout_marginRight="8dp"
                android:background="@drawable/circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="hasdhjashdj" />
            <TextView
                android:id="@+id/tv_fist_row_2"
                android:layout_marginRight="8dp"
                android:background="@drawable/circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="hasdhjashdj" />
            <TextView
                android:id="@+id/tv_fist_row_3"
                android:background="@drawable/circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="hasdhjashdj" />
        </LinearLayout>




        <!--Second Row-->
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_second_row_1"
                android:layout_marginRight="8dp"
                android:background="@drawable/circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="hasdhjashdj" />
            <TextView
                android:id="@+id/tv_second_row_2"
                android:layout_marginRight="8dp"
                android:background="@drawable/circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="hasdhjashdj" />
            <TextView
                android:id="@+id/tv_second_row_3"
                android:background="@drawable/circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="hasdhjashdj" />
        </LinearLayout>


        <!--Third Row-->
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_third_row_1"
                android:layout_marginRight="8dp"
                android:background="@drawable/circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="hasdhjashdj" />
            <TextView
                android:id="@+id/tv_third_row_2"
                android:layout_marginRight="8dp"
                android:background="@drawable/circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="hasdhjashdj" />
            <TextView
                android:id="@+id/tv_third_row_3"
                android:background="@drawable/circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="hasdhjashdj" />
        </LinearLayout>

    </GridLayout>

    <TextView
        android:id="@+id/tv_instruction"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/Applevel"
        android:layout_height="wrap_content"
        android:text="Instruction"/>



</LinearLayout>